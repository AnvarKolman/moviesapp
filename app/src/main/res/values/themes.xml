<resources>
    <!-- Base application theme. -->
    <style name="ThemeCinema" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="TextViewHeader" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#E8FFFEFE</item>
    </style>

    <style name="MenuTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#040402</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="SettingsLayout">
        <item name="android:elevation">4dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:background">@drawable/white_shape</item>
    </style>

    <style name="SearchEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/background_line</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">#8D6E63</item>
        <item name="android:layout_height">48dp</item>
    </style>
</resources>